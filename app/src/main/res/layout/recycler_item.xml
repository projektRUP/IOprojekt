<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="4dp"
        android:background="@drawable/recycler_item_bg">

        <ImageView
            android:id="@+id/profileImg"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="false"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/profileImg"
            android:layout_toRightOf="@+id/profileImg"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ratingImg"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_toEndOf="@+id/nameText"
            android:layout_toRightOf="@+id/nameText" />

        <ImageView
            android:id="@+id/callImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/ratingImg"
            android:layout_toRightOf="@+id/ratingImg"
            android:src="@drawable/ic_baseline_call_24" />

        <ImageView
            android:id="@+id/VideoCallImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/callImg"
            android:layout_toRightOf="@+id/callImg"
            android:src="@drawable/ic_baseline_videocam_24" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>